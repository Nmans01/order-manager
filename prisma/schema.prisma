generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  address Address?
  orders  order[]
}

// Address is an embedded document
type Address {
  street String
  city   String
  state  String
  zip    String
}

model order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  customer user @relation(fields: [customerId], references: [id])
  customerId String @db.ObjectId
  status Status @default(QUOTE)
}

enum Status {
  QUOTE
  PREPRINT
  PRODUCTION
  REAY_FOR_PICKUP
  DELIVERY
}